@model IEnumerable<AdminClotheModel>

@foreach (var clothe in Model)
{
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@clothe.Id">@clothe.Name</a>
                </h3>
            </div>
            <div class="panel-body">
              Name: @clothe.Name
            </div>
            <div class="panel-body">
              Type: @clothe.Type
            </div>
            <div class="panel-body">
              Quantity: @clothe.Quantity
            </div>
            <div class="panel-body">
             Single Price: @clothe.SinglePrice $
            </div>
        </div>
    </div>
}
