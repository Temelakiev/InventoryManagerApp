@model HomeIndexViewModel

@{
    ViewData["Title"] = "All Clothes";
}

<h3 class="text-center">Clothes:</h3>
<br />
<div class="row">
    <form asp-controller="Home" asp-action="Search">
        <div >
            <input asp-for="SearchText" class="form-control" placeholder="Search..." />
        </div>
        <div class="col-md-4" style=" padding:0px;margin:0px">
            <input type="submit" class="btn btn-default " value="Search" />
        </div>
    </form>
    <br />
</div>
<div class="row">
   @foreach (var clothe in Model.Clothes)
   {
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@clothe.Id">@clothe.Name</a>
                </h3>
            </div>
            <div class="panel-body">
                Name: @clothe.Name
            </div>
            <div class="panel-body">
                Type: @clothe.Type
            </div>
            <div class="panel-body">
                Quantity: @clothe.Quantity
            </div>
            <div class="panel-body">
                Single Price: @clothe.SinglePrice $
            </div>
        </div>
    </div>
   }

</div>